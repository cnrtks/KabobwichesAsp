@model Address
@{
    ViewData["Title"] = "AddressForm";
}

<h2>AddressForm</h2>
<form asp-action="SaveAddress">
    <div>
        <label asp-for="StreetAddress">Street Address</label>
        <input asp-for="StreetAddress" type="text" />
    </div>
    <div>
        <label asp-for="City">City</label>
        <input asp-for="City" type="text" />
    </div>
    <div>
        <label asp-for="PostalCode">Postal Code</label>
        <input asp-for="PostalCode" type="text" />
    </div>
    <button type="submit">Add Address</button>
</form>
